import { AssetTypes, costPattern, commaCost } from "../../utils/assetTypes.ts";
import { v4 as uuidv4 } from "uuid";

export interface Input {
	liabilities: any[];
	updateFormData: (newPersonalProperties: any[]) => void;
	updateFormValid: (newFormValid: boolean) => void;
}

<let/showModal = false />

<let/checkData = (obj: any) => {
	if (!obj.nature) {
		console.log("Nature fail.");
		return false;
	}

	if (!obj.creditors) {
		console.log("Creditors fail.");
		return false;
	}

	if (
		!obj.outstandingBalance ||
		!costPattern.test(obj.outstandingBalance)
	) {
		console.log("OutstandingBalance fail.");
		return false;
	}
	obj.outstandingBalance = commaCost(obj.outstandingBalance);

	return true;
} />

<script>
	input.updateFormValid(true);
</script>

<div class="page-buttons">
	<button class="nextButton"
		onClick() {
			showModal = true;
		}
	> 
		Add Liabilty
	</button>
</div>

<if=(input.liabilities.length > 0)>
	<for|liability, idx| of=input.liabilities>
		<DisplayCard 
			type=AssetTypes.LIABILITY
			attributes=liability
			idx=idx
			editElement (obj, i) {
				const newLiability = {...obj, liabilityID: liability.liabilityID};
				const newLiabilityList = input.liabilities.map((liability, idx) => i === idx ? newLiability : liability);
				input.updateFormData(newLiabilityList);
			}
			deleteElement (i) {
				const newLiabilityList = input.liabilities.filter((liability, idx) => i !== idx);
				input.updateFormData(newLiabilityList);
			}
			validateData (obj) {
				return checkData(obj);
			}
		/>
	</for>
</if>
<else>
	<h1 class="indicator">No Liabilities</h1>
</else>

<if=(showModal)>
	<AssetModal 
		type=AssetTypes.LIABILITY
		idx=-1
		mode="Add"
		closeModal() {
			showModal = false;
		}
		fetchData (obj, i) {
			const newLiability = {...obj, liabilityID: uuidv4()};
			input.updateFormData([...input.liabilities, newLiability]);
		}
		validateData (obj) {
			return checkData(obj);
		}
	/>
</if>